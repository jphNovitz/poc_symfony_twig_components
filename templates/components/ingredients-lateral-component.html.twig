<div {{ attributes }}>
    <input type="search"
           value="{{ ingredientQuery }}"
           name="ingredientQuery"
           data-action="live#update"
           class="border-b"
    >
    <ul>
        {% for ingredient in this.ingredients %}
            <li
                    {% if (ingredient.id in this.ids) %}
                class="font-bold bg-gradient-to-r from-yellow-200 to-yellow-50 text-green-900"
                    {% endif %}>
                {{ ingredient.name }}
            </li>
        {% endfor %}
    </ul>

</div>