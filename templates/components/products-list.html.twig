<div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-4 ">

        {% if (products is empty ) %}
            <span class="w-full p-12 text-center text-gray-600">
                Aucun produit
            </span>
        {% else %}
            {% for product in products %}

                {{ component('product-card', {
                    product: product
                }) }}
            {% endfor %}
        {% endif %}
    </div>
</div>